<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ece.j.a1779cloudcomputing.network_q">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:text="Please answer the following questions:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp" />

            <TextView
                android:text="how satisfied are you with your use of a social network?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:id="@+id/f1" />

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/n2">
                <RadioButton
                    android:id="@+id/n2a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Satisfied" />
                <RadioButton
                    android:id="@+id/n2b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Just Ok"/>
                <RadioButton
                    android:id="@+id/n2c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not Happy"/>
                <RadioButton
                    android:id="@+id/n2d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help!"/>
            </RadioGroup>



            <Button
                android:text="Submit!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/n_sub" />


        </LinearLayout>
    </ScrollView>

</FrameLayout>
